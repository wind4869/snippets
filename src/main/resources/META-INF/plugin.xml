<idea-plugin>
    <id>com.wind4869.snippets</id>
    <name>Snippets</name>
    <vendor email="windv587@gmail.com" url="http://wind4869.com">wind4869</vendor>

    <description><![CDATA[A plugin of IntelliJ IDEA on code snippet management.]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.wind4869.PopupDialogAction"
                class="com.wind4869.PopupDialogAction"
                text="Action Basics Plugin: Pop Dialog Action"
                description="SDK action example">
            <override-text place="MainMenu" text="Pop Dialog Action"/>
            <keyboard-shortcut first-keystroke="control alt A" second-keystroke="C" keymap="$default"/>
            <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
